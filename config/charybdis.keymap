        /* Интеллектуальное переключение раскладки */
        smart_lang: smart_language {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&lang_switch>, <&none>, <&to BASE>;
