            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <150>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
            retro-tap;
        };

        /* Улучшенный Sticky Shift */
        ss: sticky_shift {
            compatible = "zmk,behavior-sticky-key";
            #binding-cells = <1>;
            bindings = <&kp>;
            release-after-ms = <1500>;
            quick-release;
            ignore-modifiers; // Игнорирует уже нажатые модификаторы
        };
        
        /* Интеллектуальный слой/клавиша */
