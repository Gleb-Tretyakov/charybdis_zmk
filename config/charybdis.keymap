    behaviors {
        /* Tap Dance для переключения режимов трекбола */
        tb_mode: trackball_mode {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <250>;
            bindings = <&tog MOUSE>, <&tog SCROLL>, <&tog SNIPE>;
