        /* Адаптивное табулирование */
        tab_esc: tab_escape {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp TAB>, <&kp ESC>;
            mods = <(MOD_LCTL|MOD_RCTL)>;
        };

        /* Автоматический выход из редактирования */
        vim_exit: vim_exit_macro {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&vim_save>, <&vim_exit_insert>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        /* Улучшенная работа с окнами */
        win_mgmt: window_management {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <250>;
            bindings = <&win_max>, <&win_full>, <&win_reset>;
